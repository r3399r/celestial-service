{
  "name": "yy-zodiac-lambda",
  "version": "0.0.1",
  "author": "Yue Chang",
  "main": "index.js",
  "scripts": {
    "lint:ts": "tslint --project .",
    "fix:ts": "npm run lint:ts -- --fix",
    "lint:format": "prettier --config ./prettierrc.json --list-different \"./src/**/*.ts\"",
    "fix:format": "npm run lint:format -- --write",
    "lint": "run-p lint:*",
    "fix": "run-s fix:*",
    "clean": "del-cli dist -f",
    "build": "webpack --config webpack.config.js",
    "test": "jest -c jest.config.js",
    "test:coverage": "npm run test -- --coverage --verbose",
    "test:lambda": "npm run build:lambda && sam local invoke -t aws/cloudformation/template.yaml -e test/event.json LambdaHelpMe",
    "pre:commit": "run-s lint test",    
    "package:cloudfront": "aws cloudformation package --template-file aws/cloudformation/cloudfront-template.yaml --output-template-file cf-packaged.yaml --s3-bucket y-cf-midway",
    "deploy:cloudfront": "aws cloudformation deploy --template-file cf-packaged.yaml --stack-name test-cf-yue --parameter-overrides",
    "serverless:package": "aws cloudformation package --template-file aws/cloudformation/template.yaml --output-template-file packaged.yaml --s3-bucket y-cf-midway",
    "serverless:dev": "aws cloudformation deploy --template-file packaged.yaml --stack-name yy-zodiac-lambda-stack-dev --parameter-overrides TargetEnvr=dev",
    "serverless:prod": "aws cloudformation deploy --template-file packaged.yaml --stack-name y-help-me-stack-prod --parameter-overrides TargetEnvr=prod",
    "deploy:dev": "run-s clean build serverless:package serverless:dev",
    "deploy:prod": "npm run build && npm run serverless:package && npm run serverless:prod"
  },
  "dependencies": {
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/node": "^14.14.12",
    "del-cli": "^3.0.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.9.0",
    "express": "^4.17.1",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules-recommended": "^1.2.2",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^4.1.2",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0",
    "zip-webpack-plugin": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre:commit"
    }
  }
}
